@{
    ViewData["Title"] = "Competition Page";
}

<!DOCTYPE html>
<html>

<head>
    <title>Exercise 001 Form</title>
</head>

<body>
    <form 
        id="competition"
        method="post"
        asp-controller="Home"
        asp-action="OnEnterCompetition"
    >
        <fieldset>
            <legend><i>Contract Information</i></legend>

            <label for="fname">First name:</label>
            <input type="text" id="fname" name="fname" required/><br />

            <label for="lname">Last name:</label>
            <input type="text" id="lname" name="lname" required/><br />

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required/><br />
        </fieldset>

        <br />

        <fieldset required>
            <legend><i>Competition Question</i></legend>

            How tall is the Eiffel Tower in Paris, France?<br />

            <input type="radio" id="ans1" name="heights" value="584" required/>
            <label for="ans1">584ft</label><br />

            <input type="radio" id="ans2" name="heights" value="784" />
            <label for="ans2">784ft</label><br />

            <input type="radio" id="ans3" name="heights" value="984" />
            <label for="ans3">984ft</label><br />

            <input type="radio" id="ans4" name="heights" value="1184" />
            <label for="ans4">1184ft</label><br />
        </fieldset>

        <br />

        <fieldset>
            <legend><i>Tiebreaker Question</i></legend>

            <label for="paragraph-answer">In 25 words or less, say why you would like to win $10,000:</label><br />
            <textarea id="paragraph-answer" name="answer" rows="10" cols="38" required></textarea><br />
        </fieldset>

        <br />

        <fieldset>
            <legend><i>Enter Competition</i></legend>
            <button type="summit">Enter Competition</button>
        </fieldset>
    </form>
</body>

</html>